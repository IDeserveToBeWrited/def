SiiNunit
{
# For modders: Please do not modify this file if you want to add a new entry. Create in
# this directory a new file "<base_name>.<idofyourmod>.sii" where <base_name> is name of
# base file without the extension (e.g. "city" for "/def/city.sii") and <idofyourmod> is
# some string which is unlikely to conflict with other mod.
#
# Warning: Even if the units are specified in more than one source file, they share the
# same namespace so suffixes or prefixes should be used to avoid conflicts.

traffic_vehicle_type : traffic.vehicle_type.train
{
	spawn_ratio: 0.8

	allowed_lane_type[]: "*rail*train*"

	spawn_max_count: 2

	spawn_trailer_count[]: 6
	spawn_trailer_count[]: 7
	spawn_trailer_count[]: 8
	spawn_trailer_count[]: 9
	spawn_trailer_count[]: 10

	attachable_trailer_type[]: train_car

	safe_distance: 1000

	suspension_coef: 0.0
	deceleration_limit: 3.0

	storage_path: "/def/vehicle/traffic_storage_train.sii"
}

traffic_vehicle_type : traffic.vehicle_type.train_fast
{
	spawn_ratio: 0.8

	allowed_lane_type[]: "*rail*high_speed*"

	spawn_max_count: 2

	spawn_trailer_count[]: 3
	spawn_trailer_count[]: 4
	spawn_trailer_count[]: 5

	attachable_trailer_type[]: train_car

	safe_distance: 1000

	suspension_coef: 0.0
	deceleration_limit: 3.0

	storage_path: "/def/vehicle/traffic_storage_train_high_speed.sii"
}

traffic_vehicle_type : traffic.vehicle_type.tram
{
	spawn_ratio: 0.8

	allowed_lane_type[]: "*rail*tram*"

	spawn_max_count: 2

	spawn_trailer_count[]: 1
	spawn_trailer_count[]: 2
	spawn_trailer_count[]: 3

	attachable_trailer_type[]: tram_car

	suspension_coef: 0.0
	deceleration_limit: 8.0

	storage_path: "/def/vehicle/traffic_storage_tram.sii"
}

}


