traffic_vehicle : traffic.punto
{
	accessories[]: .punto.chassis
	accessories[]: .punto.fwheel
	accessories[]: .punto.rwheel

	max_speed: 150

	lod_dist[]: 60
	lod_dist[]: 110

	vehicle_mass: 1500
@include "drivers_generic.sui"	
}

vehicle_accessory: .punto.chassis
{
	data_path: "/def/vehicle/ai/punto/chassis.sii"
}

