traffic_trailer : traffic.trailer.car_it
{
	accessories[]: .traffic.car_it.tchassis
	accessories[]: .traffic.car_it.trwheel0
	accessories[]: .traffic.car_it.trwheel1
	accessories[]: .traffic.car_it.cargo
	cargo_mass: 9000

	base: traffic.trailer.car_trans
	
	spawn_ratio: 0.0
}

vehicle_accessory: .traffic.car_it.tchassis
{
	data_path: "/def/vehicle/trailer/car_transporter/chassis.sii"
}

vehicle_wheel_accessory: .traffic.car_it.trwheel0
{
	offset: 0
	data_path: "/def/vehicle/t_wheel/cartrans.sii"
}

vehicle_wheel_accessory: .traffic.car_it.trwheel1
{
	offset: 2
	data_path: "/def/vehicle/t_wheel/cartrans.sii"
} 
vehicle_accessory: .traffic.car_it.cargo
{
	data_path: "/def/vehicle/trailer/car_transporter/cargo_cars_it.sii"
}
